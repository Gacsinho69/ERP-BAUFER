<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- Vista de formulario extendida con información de vehículo y contacto -->
    <record id="view_order_form_baufer" model="ir.ui.view">
        <field name="name">sale.order.form.baufer</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            
            <!-- Agregar sección de vehículo después del cliente -->
            <xpath expr="//field[@name='partner_id']" position="after">
                <group string="🚌 Información del Vehículo" col="4">
                    <field name="vehicle_brand" placeholder="Mercedes Benz"/>
                    <field name="vehicle_model" placeholder="O500"/>
                    <field name="vehicle_plate" placeholder="BDXW84"/>
                    <field name="vehicle_vin" placeholder="WDB9304161K123456"/>
                </group>
            </xpath>
            
            <!-- Agregar sección de contacto -->
            <xpath expr="//field[@name='partner_id']" position="after">
                <group string="👤 Información de Contacto" col="4">
                    <field name="customer_branch" placeholder="Pajaritos"/>
                    <field name="customer_contact_name" placeholder="Armando Blanco"/>
                    <field name="customer_contact_email" placeholder="contacto@cliente.cl" widget="email"/>
                    <field name="customer_contact_phone" placeholder="+56 9 5651 3215" widget="phone"/>
                </group>
            </xpath>
            
            <!-- Agregar columna de código en líneas de pedido -->
            <xpath expr="//field[@name='order_line']//field[@name='product_template_id']" position="before">
                <field name="product_code" optional="show" string="Código"/>
            </xpath>
            
            <!-- Agregar columna de origen después de precio -->
            <xpath expr="//field[@name='order_line']//field[@name='price_unit']" position="after">
                <field name="origin_location" optional="show" string="Origen"/>
            </xpath>
            
        </field>
    </record>
    
</odoo>

